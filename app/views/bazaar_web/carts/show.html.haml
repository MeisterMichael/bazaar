.container
	.row
		.col-xs-12
			- if @cart.nil? || @cart.cart_offers.empty?
				.jumbotron
					%h1.text-center
						Nothing in Your Cart
			- else
				= form_tag bazaar_web.cart_path( @cart ), method: :patch do
					.table-responsive
						%table.table.table-light.table-bordered
							%thead
								%tr
									%th
									%th
										Item
									%th
										Price
									%th
										Quantity
									%th
										Subtotal
							%tbody
								- @cart.cart_offers.each do |line_item|
									%tr
										%td.col-xs-2
											%img.img.img-responsive{ src: line_item.offer.avatar }
										%td.col-xs-4
											= line_item.offer.title
										%td.col-xs-2
											= number_to_currency( line_item.price / 100.to_f )
										%td.col.xs-2
											= text_field_tag :quantity, line_item.quantity, class: 'form-control'
										%td.col-xs-2
											= number_to_currency( line_item.subtotal / 100.to_f )
											%a{ href: bazaar_web.cart_offer_path( line_item ), style: 'color: #f00;' , data: { method: :delete, confirm: 'Are you sure?' } }
												%i.fa.fa-trash
												Remove

					.updateArea
						.input-group
							= text_field_tag :coupon, '', placeholder: 'I have a coupon', class: 'form-control'
							= submit_tag 'Apply', class: 'btn input-group-addon'

						= submit_tag 'Update Cart', class: 'btn'


					.row.totalAmountArea
						.col-sm-4.col-sm-offset-8.col-xs-12
							%ul.list-unstyled
								%li
									Sub Total
									%span
										$29.99
								%li
									Tax
									%span
										$3.00
								%li
									Total
									%span.grandTotal
										$32.99
					.checkBtnArea
						%a.btn.btn-primary.btn-block{ href: bazaar_web.new_checkout_path, style: 'color:#fff;' }
							Checkout
							%i.fa.fa-arrow-circle-right
