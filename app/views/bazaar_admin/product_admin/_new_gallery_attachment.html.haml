#new_gallery_attachment_modal.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{ type: :button, 'data-dismiss' => 'modal', 'aria-hidden' => 'true' }
					&times;
				%h4.modal-title
					New Product
			= form_for @product, url: pulitzer.attachments_path, method: 'POST' do |f|
				= hidden_field_tag :attribute, :gallery_attachments
				= hidden_field_tag :object_class, @product.class.base_class.name
				= hidden_field_tag :object_id, @product.id
				.modal-body
					= f.file_field :gallery_attachments, name: :attachments
				.modal-footer
					%button.btn.btn-default{ type: :button, 'data-dismiss' => 'modal' }
						Close
					= f.submit 'Create', class: 'btn btn-primary'
