


.container-fluid
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					%a{ href: product_admin_index_path }
						%i.fa.fa-angle-left
						Products
				- if @product.is_a? Bazaar::SubProduct
					%li
						%a{ href: edit_product_admin_path( @product.parent_id ) }
							= @product.parent.title
			%h2
				%strong= @product.title
				%small= current_user.to_local_tz(@product.created_at).to_fs( :short )

		.col-xs-2.text-right
			%a.btn.btn-primary{ href: preview_product_admin_path( @product.id ), target: '_new' }
				%i.fa.fa-eye
				Preview

	= form_for @product, url: product_admin_path( @product ), as: :product do |f|
		.row
			.col-xs-8
				.well.white-well
					.form-group
						%h4 Content
					.form-group
						= f.label :title
						= f.text_field :title, class: 'form-control input-lg'
					.row
						-# .col-xs-12.col-lg-6
							.form-group
								= f.label :caption
								= f.text_field :caption, class: 'form-control'
						.col-xs-12.col-lg-6
							.form-group
								= f.label :slug_pref, 'Slug'
								= f.text_field :slug_pref, class: 'form-control', placeholder: @product.slug

					.form-group
						= f.label :description
						= f.text_area :description, class: 'form-control wysiwyg', data: { wysiwyg: { height_min: 80, toolbar_sticky: true, toolbar_preset: 'admin_default', object_class: @product.class.base_class.name, object_id: @product.id }.to_json }

					- if @product.is_a?(Bazaar::RootProduct)
						.row
							- if @product.respond_to? :mpns_csv
								.col-xs-12.col-lg-6
									.form-group
										= f.label :mpns_csv, 'MPNs: (Comma Separated)'
										= f.text_field :mpns_csv, placeholder: 'Separate with commas', class: 'form-control'
							- if @product.respond_to? :gtins_csv
								.col-xs-12.col-lg-6
									.form-group
										= f.label :gtins_csv, 'GTINs: (Comma Separated)'
										= f.text_field :gtins_csv, placeholder: 'Separate with commas', class: 'form-control'



				.well.white-well
					.form-group
						%h4 Listing

					.form-group
						= f.label :listing_title, 'Title'
						= f.text_field :listing_title, class: 'form-control'
					.form-group
						= f.label :listing_subtitle, 'Subtitle'
						= f.text_field :listing_subtitle, class: 'form-control'


					.row
						.col-xs-12.col-md-6
							.form-group
								= f.label :listing_recurring_offer_id, 'Non-Recurring Offer'
								= f.collection_select :listing_non_recurring_offer_id, @product.offers.active.not_recurring, :id, :title, {}, class: 'form-control select-2-ajax', data: { url: bazaar.offer_admin_index_path( status: 'active', filters: { product_id: @product.id, recurring: 'false' }, format: 'json' ) }

						.col-xs-12.col-md-6
							.form-group
								= f.label :listing_recurring_offer_id, 'Recurring Offer'
								= f.collection_select :listing_recurring_offer_id, @product.offers.active.recurring, :id, :title, {}, class: 'form-control select-2-ajax', data: { url: bazaar.offer_admin_index_path( status: 'active', filters: { product_id: @product.id, recurring: 'true' }, format: 'json' ) }
						- if defined?(Perkins::Page)
							.col-xs-12.col-md-6
								.form-group
									= f.label :listing_perkins_page, 'Page'
									= f.collection_select :listing_perkins_page_id, Perkins::Page.active.where( page_type: 'Shop Page' ).or(Perkins::Page.where(id: @product.listing_perkins_page_id)).order( :path ), :id, :path, { include_blank: '-- None -- ' }, class: 'form-control'
					.row
						.col-xs-12.col-md-6
							.form-group
								= f.label :listing_strikethrough_price_as_money, 'Strikethrough Price'
								= f.text_field :listing_strikethrough_price_as_money, class: 'form-control'
						.col-xs-12.col-md-6
							.form-group
								= f.label :listing_from_price_as_money, 'Price'
								= f.text_field :listing_from_price_as_money, class: 'form-control'
						.col-xs-12.col-md-6
							.form-group
								= f.label :listing_partial, 'Card Template'
								= f.select :listing_partial, options_for_select( Dir.glob( "app/views/bazaar_media/_card*" ).collect{ |f| f.gsub('.html.haml','').split('/_').last }, f.object.listing_partial ), {}, class: 'form-control'
						.col-xs-12.col-md-6
							.form-group
								= f.label :badges_csv, 'Badges:'
								= f.text_field :badges_csv, placeholder: 'Separate badges with commas', class: 'form-control'
						.col-xs-12.col-md-6
							= render 'pulitzer/attachments/has_one_card', f: f, attribute: :listing_avatar_attachment, object: @product, args: {}
						.col-xs-12.col-md-6
							= render 'pulitzer/attachments/has_one_card', f: f, attribute: :listing_alternative_attachment, object: @product, args: {}

				- if @product.respond_to?( :medical_disclaimer ) && @product.is_a?(Bazaar::RootProduct)
					.well.white-well
						.form-group
							%h4 Medical Disclaimer
						.form-group
							-# = f.label :medical_disclaimer
							= f.text_area :medical_disclaimer, class: 'form-control wysiwyg', data: { wysiwyg: { height_min: 80, toolbar_sticky: true, toolbar_preset: 'admin_default', object_class: @product.class.base_class.name, object_id: @product.id }.to_json }

				- if @product.is_a?(Bazaar::RootProduct)
					.well.white-well
						.form-group
							%h4 Formulation
						.row
							.col-xs-12.col-md-6
								= render 'pulitzer/attachments/has_one_card', f: f, attribute: :formulation_avatar_attachment, object: @product, args: {}
							.col-xs-12.col-md-6
								= render 'pulitzer/attachments/has_one_card', f: f, attribute: :formulation_nutrition_info_attachment, object: @product, args: {}

				- if @product.is_a?(Bazaar::RootProduct)
					.well.white-well
						.form-group
							%h4 Release


						.row
							.col-xs-12.col-md-6
								.form-group
									= f.label :pre_release_start_at
									= f.text_field :pre_release_start_at, value: current_user.to_local_tz( f.object.pre_release_start_at ), class: 'form-control datetimepicker'
							.col-xs-12.col-md-6
								.form-group
									= f.label :pre_release_end_at
									= f.text_field :pre_release_end_at, value: current_user.to_local_tz( f.object.pre_release_end_at ), class: 'form-control datetimepicker'
							.col-xs-12.col-md-6
								.form-group
									= f.label :released_at
									= f.text_field :released_at, value: current_user.to_local_tz( f.object.released_at ), class: 'form-control datetimepicker'
							.col-xs-12.col-md-6
								= render 'pulitzer/attachments/has_one_card', f: f, attribute: :coming_soon_attachment, object: @product, args: {}


				= render 'custom_fields', f: f, options: {}

				- if @product.is_a?(Bazaar::RootProduct)
					#upsell_offers
						.well.white-well
							%a.pull-right{ href: '#new_upsell_offer_modal', data: { toggle: :modal, target: '#new_upsell_offer_modal' } }
								%i.fa.fa-plus
								Add
							%h4
								Upsell Offers

							= render 'bazaar/offer_admin/upsell_offer_table', upsell_offers: Bazaar::UpsellOffer.active.where( src_product: @product, src_offer: nil ), args: {}


			.col-xs-4
				.well.white-well
					%h4
						Product Image
						%i.fa.fa-question-circle{ data: { toggle: 'tooltip' }, title: 'The public facing image used to reference this product.' }
					.form-group
						.row
							.col-xs-6{ style: 'max-width: 100px;' }
								%div{ style: 'border: 1px solid #ccc;background: #fff;margin-bottom: 5px;' }
									- if @product.avatar.present?
										%a{ href: @product.avatar, target: '_preview_image' }
											%img.img.img-responsive.center-block#product_avatar_img{:src => @product.avatar }
									- else
										%img.img.img-responsive.center-block{:src => 'data:image/gif;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=', style: 'width: 100%;' }
							.col-xs-6
								= f.file_field :avatar_attachment

					-# %h4 Suggested Price
					-# .form-group
					-# 	-# = f.label :suggested_price_as_money_string, 'Suggested Price'
					-# 	= f.number_field :suggested_price_as_money_string, class: 'form-control', min: 0.00, step: 0.01

					%h4
						Publishing Settings
					.form-group
						= f.label :status
						= f.collection_select :status, Bazaar::Product.statuses, :first, :first, {}, class: 'form-control'
					-# .form-group
						= f.label :availability
						= f.collection_select :availability, Bazaar::Product.availabilities, :first, :first, {}, class: 'form-control'
					.form-group
						= f.label :category_id
						= f.collection_select :category_id, Bazaar::ProductCategory.active.order( :name ), :id, :name, { include_blank: '-- None -- ' }, class: 'form-control'
					.form-group
						= f.text_field :category_name, class: 'form-control', placeholder: 'Add Category'

					.form-group
						= f.label :tags_csv, 'Tags:'
						= f.text_field :tags_csv, placeholder: 'Separate tags with commas', class: 'form-control'

					-# %h4
					-# 	Default Offer
					-# .form-group
					-# 	= f.collection_select :offer_id, @product.offers.active, :id, :title, {}, class: 'form-control select-2-ajax', data: { url: bazaar.offer_admin_index_path( status: 'active', filters: { product_id: @product.id }, format: 'json' ) }

					%hr

					.form-group
						= f.submit 'Update', class: 'btn btn-primary'

	.row#skus
		.col-xs-12
			.well.white-well
				%h4
					Offers
				= render 'bazaar/offer_admin/offer_table', offers: @product.offers.order( title: :asc ), args: {}

	- if @product.respond_to? :sub_products
		.row#sub_products
			.col-xs-12
				.well.white-well
					- if authorized?(Bazaar::Product, controller: Bazaar::ProductAdminController, action: :create )
						%a.btn.btn-success.pull-right{ data: { toggle: :modal, target: '#new_product' } }
							%i.fa.fa-plus-square
							New

					%h4
						Sub Products
					= render 'bazaar/product_admin/sub_products_table', products: @product.sub_products.order( title: :asc ), args: {}




= render 'new_gallery_attachment', args: {}
= render 'bazaar/upsell_offer_admin/new_modal', args: { src_product: @product }
= render 'new_modal', args: { type: 'Bazaar::SubProduct', parent_id: @product.id }