#new_product.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{ type: :button, 'data-dismiss' => 'modal', 'aria-hidden' => 'true' }
					&times;
				%h4.modal-title
					New Product
			= form_for Bazaar::Product.new( type: args[:type], parent_id: args[:parent_id] ), as: :product, url: bazaar.product_admin_index_path do |f|
				= f.hidden_field :type
				= f.hidden_field :parent_id
				.modal-body
					= f.label :title
					= f.text_field :title, class: 'form-control'

					= f.label :description
					= f.text_area :description, class: 'form-control'
				.modal-footer
					%button.btn.btn-default{ type: :button, 'data-dismiss' => 'modal' }
						Close
					= f.submit 'Create', class: 'btn btn-primary'