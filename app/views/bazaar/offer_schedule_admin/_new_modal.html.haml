#new_offer_schedule_modal.modal.fade
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{ type: :button, 'data-dismiss' => 'modal', 'aria-hidden' => 'true' }
					&times;
				%h4.modal-title
					Add Sku to #{parent_obj.title}
			= form_for Bazaar::OfferSchedule.new( parent_obj: parent_obj, interval_unit: 'weeks' ), url: bazaar.offer_schedule_admin_index_path do |f|
				= f.hidden_field :parent_obj_type
				= f.hidden_field :parent_obj_id
				- if args[:start_interval]
					= f.hidden_field :start_interval, value: args[:start_interval]
				- if args[:max_intervals]
					= f.hidden_field :max_intervals, value: args[:max_intervals]
				.modal-body
					- unless args[:start_interval]
						.form-group
							= f.label :start_interval
							= f.number_field :start_interval, class: 'form-control', min: 1, step: 1
					- unless args[:max_intervals]
						.form-group
							= f.label :max_intervals
							= f.number_field :max_intervals, value: nil, class: 'form-control', min: 1, step: 1, placeholder: 'unlimited'
					.form-group
						= f.label :interval_value
						= f.number_field :interval_value, class: 'form-control', min: 0, step: 1
					.form-group
						= f.label :interval_unit
						= f.text_field :interval_unit, class: 'form-control'
					.form-group
						= f.label :status
						= f.collection_select :status, Bazaar::OfferSku.statuses, :first, :first, {}, class: 'form-control'
				.modal-footer
					%button.btn.btn-default{ type: :button, 'data-dismiss' => 'modal' }
						Close
					= f.submit 'Add', class: 'btn btn-primary'
