- @order_item.order.order_items.prod.each do |order_item|
  $('#order_items_table tr#order_item_#{order_item.id}_edit_row [data-for="order_item.subtotal_formatted"]').html('#{j order_item.subtotal_formatted}')

- %w(subtotal_formatted discount_formatted tax_formatted shipping_formatted total_formatted).each |order_attr|
  $('#order_items_table [data-for="order.#{order_attr}"]').html('#{j @order_item.order.try(order_attr)}')
