.container-fluid
	.row
		.col-xs-12
			%h1
				New Shipment
	= form_for @shipment, url: bazaar.shipment_admin_index_path(@shipment), as: :shipment, html: { class: 'form' } do |f|
		= f.hidden_field :order_id
		= f.hidden_field :user_id
		= f.hidden_field :email
		.row
			.col-xs-12.col-md-8
				.row
					.col-xs-12.col-md-6
						- if @shipment.source_address
							.form-group
								%label Source
								%div=@shipment.source_address.to_s

						- if @shipment.order
							.form-group
								%label Order
								%div=@shipment.order.code

						- if @shipment.user
							.form-group
								%label User
								%div=@shipment.user.to_s

						.form-group
							=f.label :warehouse_id
							= f.collection_select :warehouse_id, Bazaar::Warehouse.active.order( name: :asc ), :id, :name, {}, class: 'form-control'

						.form-group
							=f.label :email
							= f.text_field :email, class: 'form-control'

						.form-group
							=f.label :notes
							= f.text_area :notes, class: 'form-control'
					.col-xs-12.col-md-6
						%label Destination Address
						- @destination_addresses.each do |geo_address|
							%div
								%label{ style: 'font-weight: normal;' }
									.pull-left= f.radio_button :destination_address_id, geo_address.id
									%div{ style: 'margin-left: 1.5em;' }
										=raw geo_address.to_html

				%hr

				.form-group.text-right
					= f.submit "Create", class: 'btn btn-primary'
