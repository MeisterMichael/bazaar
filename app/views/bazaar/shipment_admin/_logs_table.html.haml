.well.white-well
	%h4 Logs

	%table.table.table-light.table-bordered{ style: 'margin:0;' }
		%thead
			%th Date
			%th Subject
			%th Details
		%tbody
			- if @shipment.shipment_logs.blank?
				%tr
					%td{ colspan: 3 }
						\- No Logs -
			- @shipment.shipment_logs.order( created_at: :desc ).each do |shipment_log|
				%tr
					%td=current_user.to_local_tz(shipment_log.created_at).to_fs( :short )
					%td=shipment_log.subject
					%td=shipment_log.details
