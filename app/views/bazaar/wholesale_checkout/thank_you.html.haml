.container
	.row
		.col-xs-12.col-md-8.col-md-offset-2
			%h1.text-center
				Thanks for your order!
			.text-center
				Order Number: #{@order.code}


		.col-xs-12.col-md-6.col-md-offset-3
			%table.table.table-light.table-bordered
				%thead
					%tr
						%th Product
						%th{ style: 'width: 80px' } Price
						%th.text-right{ style: 'width: 70px' } Quantity
						%th.text-right{ style: 'width: 100px' } Subtotal
				%tbody
					- @order.order_offers.each do |order_offer|
						%tr
							-# %td avatar
							%td
								= order_offer.title
							%td= number_to_currency (order_offer.price.to_f / 100)
							%td.text-right
								=order_offer.quantity
							%td.text-right= number_to_currency order_offer.subtotal.to_f / 100
		.col-xs-12.col-md-6.col-md-offset-3
			- @order.order_items.each do |order_item|
				.text-right
					#{order_item.title}: #{number_to_currency order_item.subtotal.to_f / 100}
			%h3.text-right


				Total:
				= number_to_currency @order.total.to_f / 100
