= f.fields_for :order_items do |order_item_form|
	.row.order_item{ id: order_item_form.object.item.polymorphic_id.gsub(/\//,'_') }
		= order_item_form.hidden_field :item_type
		= order_item_form.hidden_field :item_id
		.col-xs-4.col-lg-6
			.form-group
				%label=order_item_form.object.title
		-# .col-xs-3.col-lg-2
			.form-group.order_item_price_formatted
				= order_item_form.object.price_formatted
		.col-xs-2.col-lg-2
			.form-group
				= order_item_form.number_field :quantity, class: 'form-control', min: 5, step: 1
		-# .col-xs-3.col-lg-2
			.form-group.order_item_subtotal_formatted
				= order_item_form.object.subtotal_formatted
-# .row
	.col-xs-12
		%hr
-# .row
	.col-xs-9.col-lg-10
		%label Subtotal
	.col-xs-3.col-lg-2
		.form-group
			= @order.subtotal_formatted
-# .row
	.col-xs-9.col-lg-10
		%label Taxes
	.col-xs-3.col-lg-2
		.form-group
			= @order.tax_formatted
-# .row
	.col-xs-12
		%hr
-# .row
	.col-xs-9.col-lg-10
		%label Total
	.col-xs-3.col-lg-2
		.form-group
			= @order.total_formatted
