.container
	.row
		.col-xs-12.col-md-8.col-md-offset-2
			%h1.text-center
				Thanks for your order!
			.text-center
				Order Number: #{@order.code}


		.col-xs-12.col-md-6.col-md-offset-3
			%table.table.table-light.table-bordered
				%thead
					%tr
						%th Product
						%th{ style: 'width: 80px' } Price
						%th.text-right{ style: 'width: 70px' } Quantity
						%th.text-right{ style: 'width: 100px' } Subtotal
				%tbody
					- @order.order_offers.each do |order_offer|
						%tr
							-# %td avatar
							%td
								= order_offer.title
							%td= number_to_currency (order_offer.price_as_money)
							%td.text-right
								=order_offer.quantity
							%td.text-right= number_to_currency order_offer.subtotal_as_money
		.col-xs-12.col-md-6.col-md-offset-3
			- unless @order.discount == 0
				.text-right
					Discount: #{number_to_currency @order.discount_as_money}
			.text-right
				Shipping: #{number_to_currency @order.shipping_as_money}
			.text-right
				Tax: #{number_to_currency @order.tax_as_money}
			%h3.text-right


				Total:
				= number_to_currency @order.total.to_f / 100
