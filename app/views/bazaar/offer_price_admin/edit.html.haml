

.container-fluid
	.row
		.col-xs-10
			%ul.breadcrumb
				%li
					%a{ href: offer_admin_index_path }
						%i.fa.fa-angle-left
						Offers
				%li
					%a{ href: edit_offer_admin_path(@offer_price.parent_obj) }
						%i.fa.fa-angle-left
						#{@offer_price.parent_obj.title}
			%h2
				%strong Offer Price
				%small= current_user.to_local_tz(@offer_price.created_at).to_s( :short )

		.col-xs-2


	= form_for @offer_price, url: offer_price_admin_path( @offer_price ) do |f|
		.row
			.col-xs-8
				.well.white-well
					.form-group
						%label Start Interval
						%div=@offer_price.start_interval
					.form-group
						= f.label :price_as_money_string, 'Price'
						= f.number_field :price_as_money_string, class: 'form-control', min: 0.00, step: 0.01
					.form-group
						= f.submit 'Save', class: 'btn btn-primary'
						%a.btn.btn-default{ href: edit_offer_admin_path(@offer_price.parent_obj) }
							Cancel
