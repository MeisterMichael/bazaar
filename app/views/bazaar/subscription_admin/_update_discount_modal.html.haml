.modal.fade#update_discount_modal
	.modal-dialog.modal-sm
		.modal-content
			.modal-header
				%button.close{ type: :button, 'data-dismiss' => 'modal', 'aria-hidden' => 'true' }
					&times;
				%h4.modal-title
					Select Subscription Discount
					%small
						#{@subscription.code}
			= form_for @subscription, url: subscription_admin_path( @subscription ) do |f|
				.modal-body
					.form-group.select2-form-group
						= f.label :discount_id, "Discount"
						= f.collection_select :discount_id, Bazaar::Discount.active.in_progress.order( Arel.sql('lower(code) ASC') ), :id, :code, { include_blank: '-- None -- ' }, class: 'form-control select-2-basic'
				.modal-footer
					%button.btn.btn-default{ type: :button, 'data-dismiss' => 'modal' }
						Close
					= f.submit 'Save', class: 'btn btn-primary'
