.row
	.col-xs-12.col-lg-3
		.form-group
			%label Initial Price
			.form-control{ readonly: true }
				= @offer.offer_prices.active.where( start_interval: 1 ).first.try(:price_as_money_string)
	.col-xs-12.col-lg-3
		.form-group
			%label Thereafter Price
			.form-control{ readonly: true }
				= @offer.offer_prices.active.where( start_interval: 2 ).first.try(:price_as_money_string)
	.col-xs-12.col-lg-3
		.form-group
			= f.label :suggested_price_as_money_string, 'Suggested Price'
			%i.fa.fa-question-circle{ data: { toggle: 'tooltip' }, title: '' }
			= f.number_field :suggested_price_as_money_string, class: 'form-control', min: 0.00, step: 0.01